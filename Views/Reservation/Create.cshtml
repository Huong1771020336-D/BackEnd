@model Restaurant.Domain.Entities.Reservation

@{
    ViewData["Title"] = "Đặt bàn";
}

<h2>Đặt bàn</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ReservationDate"></label>
        <input asp-for="ReservationDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ReservationTime"></label>
        <input asp-for="ReservationTime" type="time" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NumberOfPeople"></label>
        <input asp-for="NumberOfPeople" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Note"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Đặt bàn</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
